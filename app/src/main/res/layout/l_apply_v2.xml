<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_vg"
    style="@style/padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="root_vg">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/apply"
        android:tag="icon_iv"
        tools:ignore="ContentDescription,HardcodedText" />

    <LinearLayout
        android:id="@+id/vg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/icon_iv"
        android:layout_toRightOf="@+id/icon_iv"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:tag="tv0"
            android:text="编号"
            android:textColor="#000000"
            android:textSize="@dimen/tv2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:tag="tv1"
            android:textColor="#808000"
            android:textSize="@dimen/tv2"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            tools:text="FGMC-ZD-20180302-0001" />

        <TextView
            android:id="@id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:maxLines="1"
            android:tag="tv2"
            android:text="金额"
            android:textColor="#000000"
            android:textSize="@dimen/tv2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@id/tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="right"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:tag="tv3"
            android:textColor="#808000"
            android:textSize="@dimen/tv2"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            tools:text="100000.00" />

    </LinearLayout>

    <TextView
        android:id="@id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vg"
        android:layout_below="@id/vg"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:tag="tv4"
        android:textColor="#000000"
        android:textSize="@dimen/tv2"
        tools:ignore="RtlHardcoded"
        tools:text="李强" />

    <TextView
        android:id="@id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:tag="tv5"
        android:textColor="#000000"
        android:textSize="@dimen/tv2"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        tools:text="部门一" />

    <TextView
        android:id="@id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/vg"
        android:layout_below="@id/vg"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:tag="tv6"
        android:textColor="#000000"
        android:textSize="@dimen/tv2"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        tools:text="2018-06-10" />

    <TextView
        android:id="@id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_iv"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:tag="tv7"
        android:text="招待事由"
        android:textColor="#000000"
        android:textSize="@dimen/tv2"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <TextView
        android:id="@id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_iv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tv7"
        android:maxLines="1"
        android:tag="tv8"
        android:textColor="#808000"
        android:textSize="@dimen/tv2"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        tools:text="招待事由" />

</RelativeLayout>