<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_height"
    android:background="@color/bar_bg"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="@dimen/bar_height"
        android:layout_height="@dimen/bar_height"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:src="@mipmap/back"
        tools:ignore="ContentDescription,RtlSymmetry" />

    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/bar_height"
        android:layout_marginRight="@dimen/bar_height"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv_big"
        tools:text="返回" />

    <TextView
        android:id="@+id/center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/bar_height"
        android:layout_marginRight="@dimen/bar_height"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv_big"
        android:visibility="gone"
        tools:text="中央"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:orientation="horizontal"
        android:gravity="center"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/right_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv"
            android:visibility="gone"
            tools:text="申诉"
            tools:visibility="visible" />

        <View
            android:id="@+id/line_vew"
            android:layout_width="1dp"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/icon_padding"
            android:layout_marginRight="@dimen/icon_padding"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv"
            android:visibility="gone"
            tools:text="确定"
            tools:visibility="visible" />


    </LinearLayout>

</FrameLayout>
