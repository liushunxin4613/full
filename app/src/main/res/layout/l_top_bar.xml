<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_height"
    android:background="@color/bar_bg"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="@dimen/bar_height"
        android:layout_height="@dimen/bar_height"
        android:padding="12dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/back"
        tools:ignore="ContentDescription,RtlSymmetry" />

    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bar_height"
        android:layout_marginRight="@dimen/bar_height"
        android:layout_gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv_big"
        tools:text="返回"
        />

    <TextView
        android:id="@+id/center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bar_height"
        android:layout_marginRight="@dimen/bar_height"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv_big"
        tools:text="中央"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_gravity="center_vertical|right"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv"
        tools:text="确定"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="RtlHardcoded" />

</FrameLayout>
