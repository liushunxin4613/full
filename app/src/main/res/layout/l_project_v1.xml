<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_vg"
    style="@style/padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/x72"
        android:layout_height="@dimen/x72"
        android:src="@mipmap/apply"
        android:tag="icon_iv"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@id/tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/icon_iv"
        android:layout_toRightOf="@+id/icon_iv"
        android:maxLines="1"
        android:tag="tv0"
        android:textColor="#000000"
        android:textSize="@dimen/tv2"
        tools:text="项目名称  测试项目" />

    <TextView
        android:id="@id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv0"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/y8"
        android:layout_toEndOf="@+id/icon_iv"
        android:layout_toRightOf="@+id/icon_iv"
        android:maxLines="1"
        android:tag="tv1"
        android:textColor="#000000"
        android:textSize="@dimen/tv2"
        tools:text="项目编号  1121" />

    <LinearLayout
        android:id="@+id/vg0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_iv"
        android:layout_marginTop="@dimen/y8"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv2"
            android:layout_width="@dimen/x180"
            android:layout_height="wrap_content"
            android:background="@drawable/l_kuang_shape"
            android:gravity="center"
            android:maxLines="1"
            android:tag="tv2"
            android:textColor="#68ABFA"
            android:textSize="@dimen/tv2"
            tools:ignore="HardcodedText"
            tools:text="已审批" />

        <TextView
            android:id="@id/tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLines="1"
            android:paddingLeft="@dimen/x20"
            android:tag="tv3"
            android:textColor="#000000"
            android:textSize="@dimen/tv2"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            tools:text="￥100.00" />

        <TextView
            android:id="@id/tv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:maxLines="1"
            android:paddingLeft="@dimen/x20"
            android:tag="tv4"
            android:textColor="#000000"
            android:textSize="@dimen/tv2"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            tools:text="华中营销中心" />

    </LinearLayout>

</RelativeLayout>